@model IEnumerable<TicketBooking.Domain.DTO.CountryDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel">
    <div class="panel-heading">
        <a href="@Url.Action("Create","Country")" class="btn btn-default pull-right"><i class="fa fa-plus"></i>&nbsp;Add Country</a>
    </div>
    <div class="panel-body">
        <table width="100%" id="demo-dt-basic" class="table table-striped table-bordered">
            <thead>
            <tr role="row">
                <th>SL#</th>
                <th>
                    Region
                </th>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{ i++;}
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryRegions.RegionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>