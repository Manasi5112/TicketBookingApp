@model IEnumerable<TicketBooking.Domain.DTO.CountryRegionDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <a href="@Url.Action("Create","CountryRegion")" class="btn btn-default pull-right"><i class="fa fa-plus"></i>&nbsp;Add Region</a>
    </div>
    <div class="panel-body">
        <table width="100%" id="demo-dt-basic" class="table table-striped table-bordered">
            <thead>
                <tr role="row">
                    <th>SL#</th>
                    <th>Region</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{ i++;}
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegionName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>